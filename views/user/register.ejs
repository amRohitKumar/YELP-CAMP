<% layout('layouts/boilerplate') %>

<div class="row">
    <h1 class="text-center">Registration</h1>
    <div class="col-4 offset-4">
        <form action="/register/" method="POST" novalidate class="validated-form">
            <div class="mb-3">
                <label class="form-label" for="username">Username: </label>
                <input id="username" class="form-control" type="text" placeholder="Username..." name="username" required>
                <div class="valid-feedback">
                    Looks Good !
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="email">Email: </label>
                <input id="email" class="form-control" type="email" placeholder="Email..." name="email" required>
                <div class="valid-feedback">
                    Looks Good !
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Email: </label>
                <input id="password" class="form-control" type="password" placeholder="Password..." name="password" required>
                <div class="valid-feedback">
                    Looks Good !
                </div>
            </div>
            <div class="mb-3" style="display: flex; justify-content: center;">
                <button class="btn btn-success">Submit</button>
            </div>
        </form>
    </div>
</div>